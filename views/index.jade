extends layout

block content
	br

	h1(class='page-header')
		div(class='pull-left')
			span="Channels List"
		div(class='pull-right')
			input(id='search', placeholder='Search')
		div(class='clearfix')

	div(id='channels',class='row')
		each item in channels
			div(class='col-md-1 channel', title=item.title, data-slug=item.slug)
				span(class='s')
					a(href='/channel/'+ item.slug, title=item.title)
						img(src='/images/channels/' + item.slug + '.jpg', class='thumbnail')